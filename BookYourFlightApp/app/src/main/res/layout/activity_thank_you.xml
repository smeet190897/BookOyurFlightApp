<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThankYouActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="312dp"
            android:layout_height="308dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_airplane" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="BookYourFlightApp"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Thank You...For Booking Your Flight From Our BookYourFlightApp. "
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Travel Safe, Always Wear A Mask And Have A Safe Journey... :)"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btnhome"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:onClick="btnhome"
            android:text="Proceed To Home"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>